coverage:
	rm -f `find . -name "*\.gcda"`
	make test
	lcov --capture --directory . --output-file coverage_all.info
	#lcov capture also includes external stuff like glibc, boost etc.
	#only extract the reports for this project
	lcov --extract coverage_all.info "@CMAKE_SOURCE_DIR@*" -o coverage_incl_pugixml.info
	#We added the pugixml code to the repository. Remove it from the report.
	lcov --remove coverage_incl_pugixml.info "@CMAKE_SOURCE_DIR@/extern/*" -o coverage.info
	genhtml coverage.info --output-directory coverage_html
